#!/bin/bash

mkdir /filOS/
cd /filOS/

git clone https://github.com/tassopsaltakis/FilOS

echo '
console owner

pre-start script
    setterm -powerdown 0 -blank 0
end script

exec python3 /filOS/filOS/root/src/shell.py

post-stop script
    clear
    setterm -blank 2
end script

' > /etc/init/hud.conf
